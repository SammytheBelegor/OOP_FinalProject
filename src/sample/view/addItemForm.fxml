<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e7dda3;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.AddItemFormController">
   <children>
      <TextField fx:id="taskField" layoutX="122.0" layoutY="140.0" prefHeight="40.0" prefWidth="360.0" promptText="Task">
         <font>
            <Font name="Baskerville Old Face" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="descriptionField" alignment="TOP_LEFT" layoutX="122.0" layoutY="200.0" prefHeight="102.0" prefWidth="360.0" promptText="Description">
         <font>
            <Font name="Baskerville Old Face" size="18.0" />
         </font>
      </TextField>
      <Button fx:id="saveTaskButton" layoutX="227.0" layoutY="328.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #b9ac5f;" text="Save Task" textFill="WHITE">
         <font>
            <Font name="Baskerville Old Face" size="20.0" />
         </font>
      </Button>
      <AnchorPane prefHeight="90.0" prefWidth="600.0" style="-fx-background-color: #3b3b3b;">
         <children>
            <Label alignment="CENTER" layoutX="230.0" layoutY="20.0" prefHeight="50.0" prefWidth="140.0" text="ToDo" textFill="WHITE">
               <font>
                  <Font name="Baskerville Old Face" size="40.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label fx:id="successLabel" layoutX="265.0" layoutY="99.0" prefHeight="27.0" prefWidth="332.0" text="Task added successfully! Add another one!" textFill="#3b3b3b" visible="false">
         <font>
            <Font name="Baskerville Old Face" size="16.0" />
         </font>
      </Label>
      <Button fx:id="todosButton" layoutX="480.0" layoutY="360.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="106.0" style="-fx-background-color: #3b3b3b;" text="my 2Do's {3}" textFill="WHITE" visible="false">
         <font>
            <Font name="Baskerville Old Face" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
