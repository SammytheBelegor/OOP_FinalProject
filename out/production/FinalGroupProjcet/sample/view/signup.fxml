<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e7dda3;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.SignupController">
    <children>
        <AnchorPane prefHeight="90.0" prefWidth="600.0" style="-fx-background-color: #3b3b3b;">
