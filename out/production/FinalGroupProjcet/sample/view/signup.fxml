                <Font name="Baskerville Old Face" size="12.0" />
            </font></TextField>
        <TextField fx:id="signUpLastName" layoutX="133.0" layoutY="159.0" prefHeight="25.0" prefWidth="335.0" promptText="Last Name">
            <font>
                <Font name="Baskerville Old Face" size="12.0" />
            </font></TextField>
        <TextField fx:id="signUpUsername" layoutX="133.0" layoutY="207.0" prefHeight="25.0" prefWidth="335.0" promptText="Username">
            <font>
                <Font name="Baskerville Old Face" size="12.0" />
            </font></TextField>
        <TextField fx:id="signUpLocation" layoutX="133.0" layoutY="320.0" prefHeight="25.0" prefWidth="335.0" promptText="Location">
